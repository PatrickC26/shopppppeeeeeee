                        android:layout_height="104dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/L_cartTitle2"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:layout_weight="1"
                            android:text="@string/穿戴1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/L_cartAmount2"
                                android:layout_width="197dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/穿戴1金額" />

                            <EditText
                                android:id="@+id/T_cartQty2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="11"
                                android:ems="10"
                                android:inputType="number" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/CB_cart3"
                        android:layout_width="7dp"
                        android:layout_height="103dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/P_cartImg3"
                        android:layout_width="wrap_content"
                        android:layout_height="101dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/alert_dark_frame" />

                    <LinearLayout
                        android:layout_width="243dp"
                        android:layout_height="104dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/L_cartTitle3"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:layout_weight="1"
                            android:text="@string/衣服1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/L_cartAmount3"
                                android:layout_width="197dp"
                                android:layout_height="match_parent"
